<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".test2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#c8a99e">
    <TextView
        android:id="@+id/TV"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#660066"
        android:text="Кем вы хотите работать?">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/prodavetc" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/programist" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/BT1"
            android:text="Продавец"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:backgroundTint="#8c4566">
            ></Button>
        <Button
            android:id="@+id/BT2"
            android:text="Программист"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:backgroundTint="#8c4566">
            ></Button>
    </LinearLayout>


</LinearLayout>